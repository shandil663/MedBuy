<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="390sp"
    android:layout_height="130sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    >



    <TextView
        android:id="@+id/itempricehere"
        android:layout_gravity="center_horizontal|end|bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_marginEnd="30sp"
        android:layout_marginBottom="10sp"
        android:fontFamily="@font/poppins_bold"
        android:textAlignment="center"
        android:text="1000" />

    <TextView
        android:id="@+id/itemnamehere"
        android:layout_gravity="center_horizontal|start"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="20sp"
        android:layout_marginStart="120sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="normal"
        android:text="Item name here" />
    <TextView
        android:id="@+id/itemqthere"
        android:layout_gravity="center_horizontal|start"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="60sp"
        android:layout_marginStart="215sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="normal"
        android:text="10" />
    <TextView
        android:id="@+id/qt"
        android:layout_gravity="center_horizontal|start"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="60sp"
        android:layout_marginStart="130sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="normal"
        android:text="Quantity:" />


    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="65sp"
        android:layout_marginBottom="10sp"
        android:layout_gravity="center_horizontal|end|bottom"
       android:fontFamily="@font/poppins_bold"
        android:textSize="13sp"
        android:text="â‚¹" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25sp"
        android:layout_marginTop="20sp"
        android:layout_gravity="center_horizontal|end"
        android:backgroundTint="@color/white"
        app:srcCompat="@drawable/delete" />

    <androidx.cardview.widget.CardView
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_gravity="center|start"
        android:layout_marginStart="10sp"
        app:cardCornerRadius="200sp"
        android:elevation="5sp"
        >
        <ImageView
            android:id="@+id/productimg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/img_3" />
    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>